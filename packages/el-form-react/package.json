{
  "name": "el-form-react",
  "version": "2.0.0",
  "description": "React form components and hooks powered by Zod validation",
  "author": "Nichalas Barnes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/colorpulse6/el-form"
  },
  "homepage": "https://colorpulse6.github.io/el-form/",
  "keywords": [
    "react",
    "form",
    "validation",
    "zod",
    "typescript",
    "hooks",
    "components",
    "autoform",
    "type-safe",
    "schema-validation"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.mjs",
      "require": "./dist/components.js"
    },
    "./styles.css": "./src/styles.css"
  },
  "files": [
    "dist",
    "src/styles.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "prepublishOnly": "pnpm run build"
  },
  "dependencies": {
    "el-form-core": "workspace:^",
    "el-form-react-hooks": "workspace:^",
    "el-form-react-components": "workspace:^",
    "zod": "^3.22.0"
  },
  "peerDependencies": {
    "react": ">=16.8.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
