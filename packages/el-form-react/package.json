{
  "name": "el-form-react",
  "version": "4.1.2",
  "description": "Best React Hook Form alternative - TypeScript-first form library with zero-boilerplate AutoForm and powerful useForm hook. Schema-first validation (Zod, Yup, Valibot), built-in components, enterprise-grade form state management.",
  "author": "Nichalas Barnes",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/colorpulse6/el-form"
  },
  "homepage": "https://elform.dev/",
  "bugs": {
    "url": "https://github.com/colorpulse6/el-form/issues"
  },
  "funding": {
    "type": "github",
    "url": "https://github.com/sponsors/colorpulse6"
  },
  "keywords": [
    "react",
    "form",
    "forms",
    "validation",
    "zod",
    "yup",
    "valibot",
    "typescript",
    "hooks",
    "components",
    "autoform",
    "useform",
    "type-safe",
    "schema-validation",
    "form-library",
    "form-management",
    "react-hook-form",
    "react-hook-form-alternative",
    "form-builder",
    "schema-first",
    "modern-forms",
    "typescript-forms",
    "declarative-forms",
    "zero-boilerplate",
    "form-generator",
    "enterprise-forms",
    "formik-alternative",
    "react-forms",
    "form-state-management",
    "typescript-first",
    "schema-to-form",
    "instant-forms",
    "form-components",
    "react-form-library",
    "next-js-forms",
    "tailwind-forms"
  ],
  "main": "dist/index.js",
  "module": "dist/index.mjs",
  "types": "dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./hooks": {
      "types": "./dist/hooks.d.ts",
      "import": "./dist/hooks.mjs",
      "require": "./dist/hooks.js"
    },
    "./components": {
      "types": "./dist/components.d.ts",
      "import": "./dist/components.mjs",
      "require": "./dist/components.js"
    },
    "./styles.css": "./src/styles.css"
  },
  "files": [
    "dist",
    "src/styles.css"
  ],
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch"
  },
  "dependencies": {
    "el-form-core": "workspace:^",
    "el-form-react-hooks": "workspace:^",
    "el-form-react-components": "workspace:^"
  },
  "peerDependencies": {
    "react": ">=16.8.0",
    "zod": "^3.22.0 || ^4.0.0"
  },
  "peerDependenciesMeta": {
    "tailwindcss": {
      "optional": true
    }
  },
  "devDependencies": {
    "@types/react": "^18.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.0.0"
  }
}
