{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "declaration": true,
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "el-form-core": ["./packages/el-form-core/src/index.ts"],
      "el-form-react": ["./packages/el-form-react/src/index.ts"],
      "el-form-react-hooks": ["./packages/el-form-react-hooks/src/index.ts"],
      "el-form-react-components": [
        "./packages/el-form-react-components/src/index.ts"
      ]
    }
  },
  "include": ["packages/*/src", "examples/*/src"]
}
