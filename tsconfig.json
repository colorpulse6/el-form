{
  "compilerOptions": {
    "target": "ES2020",
    "useDefineForClassFields": true,
    "lib": ["ES2020", "DOM", "DOM.Iterable"],
    "module": "ESNext",
    "skipLibCheck": true,

    "moduleResolution": "bundler",
    "allowImportingTsExtensions": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": true,
    "jsx": "react-jsx",

    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "allowSyntheticDefaultImports": true,
    "esModuleInterop": true,

    "declaration": true,
    "outDir": "dist",

    "baseUrl": ".",
    "paths": {
      "el-form": ["./packages/el-form/src/index.ts"],
      "el-form/react": ["./packages/el-form/src/react.ts"],
      "el-form/core": ["./packages/el-form/src/core.ts"]
    }
  },
  "include": ["packages/*/src", "examples/*/src", "src/index.ts"],
  "references": [{ "path": "./tsconfig.node.json" }]
}
